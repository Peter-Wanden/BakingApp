<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title_text</item>
        <item name="android:paddingTop">@dimen/card_title_top_padding</item>
        <item name="android:paddingBottom">@dimen/card_bottom_padding</item>
        <item name="android:paddingRight">@dimen/card_right_left_pading</item>
        <item name="android:paddingLeft">@dimen/card_right_left_pading</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CardViewSubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">@dimen/card_right_left_pading</item>
        <item name="android:paddingRight">@dimen/card_right_left_pading</item>
        <item name="android:paddingBottom">@dimen/card_bottom_padding</item>
    </style>

</resources>
